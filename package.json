{
  "name": "@common-utilities/root",
  "version": "0.0.1",
  "description": "Common utilities for javascript development ðŸ§°",
  "repository": "git@github.com:yowainwright/common-utilities.git",
  "author": "Jeff Wainwright <yowainwright@gmail.com> (https://jeffry.in)",
  "license": "MIT",
  "main": "README.md",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-lerna-scopes": "^17.0.0",
    "@commitlint/prompt": "^17.0.0",
    "@common-utilities/new-pkg": "workspace:*",
    "@swc/core": "^1.2.175",
    "@swc/jest": "^0.2.20",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "commitizen": "^4.0.3",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^2.0.2",
    "rimraf": "^3.0.2",
    "tsconfig-paths": "^4.0.0",
    "tslib": "^2.3.1",
    "tsutils": "^3.21.0",
    "typescript": "^4.6.3"
  },
  "resolutions": {
    "minimist": "^1.2.6"
  },
  "scripts": {
    "build": "pnpm -r clean && pnpm -r build",
    "create-pkg": "node node_modules/@common-utilities/new-pkg/dist",
    "ci": "run-s lint:ci test:ci",
    "commit-msg": "commitlint --edit $1",
    "lint": "pnpm lint:cmd --fix",
    "lint:ci": "pnpm lint:cmd",
    "lint:cmd": "eslint . --ext '.ts'",
    "lint-staged": "npx lint-staged",
    "test": "pnpm test:cmd",
    "test:ci": "pnpm test:cmd --ci",
    "test:cmd": "jest --maxWorkers=4 --noStackTrace --collectCoverage=true",
    "commit": "git-cz",
    "commit:retry": "git-cz --retry",
    "commitmsg": "commitlint -e",
    "deploy": "pnpm build && pnpm -r publish",
    "prepare": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/@commitlint/prompt"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-lerna-scopes"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ],
      "scope-enum": [
        2,
        "always",
        [
          "root",
          "compose",
          "debounce",
          "head",
          "pipe",
          "repeat",
          "trace",
          "filter-array",
          "merge-objects",
          "is-object",
          "string-interpolation",
          "kebab-to-camel-string",
          "throttle",
          "trim-whitespace",
          "wait-until-defined",
          "rot13"
        ]
      ],
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "test",
          "release",
          "revert"
        ]
      ]
    }
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "@swc/jest"
    }
  },
  "lint-staged": {
    "*.{ts,json,md}": [
      "pnpm lint"
    ],
    "*.{ts,tsx}": [
      "jest --bail --findRelatedTests --passWithNoTests"
    ]
  }
}
