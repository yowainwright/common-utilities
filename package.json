{
  "name": "@common-utilities/root",
  "version": "0.0.1",
  "description": "Common utilities for javascript development ðŸ§°",
  "repository": "git@github.com:yowainwright/common-utilities.git",
  "author": "Jeff Wainwright <yowainwright@gmail.com> (https://jeffry.in)",
  "license": "MIT",
  "main": "README.md",
  "private": true,
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/format": "^19.3.0",
    "@commitlint/prompt": "19.8.0",
    "@common-utilities/new-pkg": "workspace:*",
    "@eslint/js": "^9.1.1",
    "@swc/core": "^1.5.0",
    "@swc/jest": "0.2.38",
    "@types/jest": "29.5.14",
    "@types/node": "22.15.11",
    "codependence": "^0.3.1",
    "commitizen": "4.3.1",
    "eslint": "9.26.0",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "lint-staged": "15.5.1",
    "pastoralist": "1.1.12-beta.5",
    "prettier": "3.5.3",
    "rimraf": "6.0.1",
    "ts-node": "10.9.2",
    "ts-toolbelt": "^9.6.0",
    "tsconfig-paths": "4.2.0",
    "tslib": "2.8.1",
    "tsutils": "^3.21.0",
    "turbo": "^1.13.2",
    "type-fest": "^4.17.0",
    "typescript": "5.8.3",
    "typescript-eslint": "^7.7.1"
  },
  "scripts": {
    "build": "turbo run clean && turbo run build",
    "create-pkg": "node --es-module-specifier-resolution=node node_modules/@common-utilities/new-pkg/dist",
    "ci": "run-s lint:ci test:ci",
    "commit-msg": "commitlint --edit $1",
    "lint": "pnpm lint:cmd --fix",
    "lint:ci": "pnpm lint:cmd",
    "lint:cmd": "eslint",
    "lint-staged": "npx lint-staged",
    "test": "pnpm test:cmd",
    "test:ci": "pnpm test:cmd --ci",
    "test:cmd": "jest --maxWorkers=4 --noStackTrace --collectCoverage=true",
    "commit": "git-cz",
    "commit:retry": "git-cz --retry",
    "commitmsg": "commitlint -e",
    "deploy": "pnpm build && pnpm -r publish",
    "prepublishOnly": "pnpm build",
    "prepare": "husky",
    "release-prep": "changeset",
    "release-bumps": "changeset version",
    "release-packages": "pnpm prepublishOnly && changeset publish && git push --follow-tags",
    "update": "codependence --update",
    "check-deps": "pastoralist --debug"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ],
      "scope-enum": [
        2,
        "always",
        [
          "curry",
          "root",
          "compose",
          "debounce",
          "head",
          "pipe",
          "repeat",
          "trace",
          "filter-array",
          "merge-objects",
          "is-object",
          "string-interpolation",
          "kebab-to-camel-string",
          "throttle",
          "trim-whitespace",
          "wait-until-defined",
          "rot13",
          "snake-to-camel-string"
        ]
      ],
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "test",
          "release",
          "revert"
        ]
      ]
    }
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "@swc/jest"
    }
  },
  "lint-staged": {
    "*.{ts,json,md}": [
      "pnpm lint"
    ],
    "*.{ts,tsx}": [
      "jest --bail --findRelatedTests --passWithNoTests"
    ]
  },
  "pastoralist": {
    "appendix": {
      "minimist@^1.2.6": {
        "dependents": {
          "typescript": "minimist@^1.2.8"
        }
      }
    }
  }
}
