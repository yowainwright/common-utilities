{
  "name": "@common-utilities/root",
  "version": "0.0.1",
  "description": "Common utilities for javascript development ðŸ§°",
  "repository": "git@github.com:yowainwright/common-utilities.git",
  "author": "Jeff Wainwright <yowainwright@gmail.com> (https://jeffry.in)",
  "license": "MIT",
  "main": "README.md",
  "private": true,
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "18.6.0",
    "@commitlint/config-lerna-scopes": "18.4.4",
    "@commitlint/prompt": "18.6.0",
    "@common-utilities/new-pkg": "workspace:*",
    "@swc/core": "^1.3.105",
    "@swc/jest": "0.2.36",
    "@types/jest": "29.5.12",
    "@types/node": "20.11.16",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "codependence": "^0.2.6",
    "commitizen": "4.3.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "husky": "9.0.10",
    "jest": "29.7.0",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "rimraf": "5.0.5",
    "ts-node": "10.9.2",
    "ts-toolbelt": "^9.6.0",
    "tsconfig-paths": "4.2.0",
    "tslib": "2.6.2",
    "tsutils": "^3.21.0",
    "turbo": "^1.11.3",
    "type-fest": "^4.9.0",
    "typescript": "5.3.3"
  },
  "resolutions": {
    "minimist": "^1.2.6"
  },
  "scripts": {
    "build": "turbo run clean && turbo run build",
    "create-pkg": "node --es-module-specifier-resolution=node node_modules/@common-utilities/new-pkg/dist",
    "ci": "run-s lint:ci test:ci",
    "commit-msg": "commitlint --edit $1",
    "lint": "pnpm lint:cmd --fix",
    "lint:ci": "pnpm lint:cmd",
    "lint:cmd": "eslint . --ext '.ts'",
    "lint-staged": "npx lint-staged",
    "test": "pnpm test:cmd",
    "test:ci": "pnpm test:cmd --ci",
    "test:cmd": "jest --maxWorkers=4 --noStackTrace --collectCoverage=true",
    "commit": "git-cz",
    "commit:retry": "git-cz --retry",
    "commitmsg": "commitlint -e",
    "deploy": "pnpm build && pnpm -r publish",
    "prepublishOnly": "pnpm build",
    "prepare": "husky install",
    "release-prep": "changeset",
    "release-bumps": "changeset version",
    "release-packages": "pnpm prepublishOnly && changeset publish && git push --follow-tags",
    "update": "codependence --update"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/@commitlint/prompt"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-lerna-scopes"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ],
      "scope-enum": [
        2,
        "always",
        [
          "curry",
          "root",
          "compose",
          "debounce",
          "head",
          "pipe",
          "repeat",
          "trace",
          "filter-array",
          "merge-objects",
          "is-object",
          "string-interpolation",
          "kebab-to-camel-string",
          "throttle",
          "trim-whitespace",
          "wait-until-defined",
          "rot13",
          "snake-to-camel-string"
        ]
      ],
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "test",
          "release",
          "revert"
        ]
      ]
    }
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "@swc/jest"
    }
  },
  "lint-staged": {
    "*.{ts,json,md}": [
      "pnpm lint"
    ],
    "*.{ts,tsx}": [
      "jest --bail --findRelatedTests --passWithNoTests"
    ]
  }
}
